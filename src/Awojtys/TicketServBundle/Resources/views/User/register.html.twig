{% extends "AwojtysTicketServBundle::base.html.twig" %}

{% block site_title %}Tworzenie użytkownika{% endblock %}
{% block title %}Tworzenie użytkownika{% endblock %}

{% block content %}
<p class="error">{{ errors }}</p>
{{ form_start(form) }}

<table>
    <tr>
        <td>{{ form_label(form.Nickname) }}</td>
        <td>{{ form_widget(form.Nickname) }}</td>
        <td>{{ form_errors(form.Nickname) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.Password.first) }}</td>
        <td>{{ form_widget(form.Password.first) }}</td>
        <td>{{ form_errors(form.Password.first) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.Password.second) }}</td>
        <td>{{ form_widget(form.Password.second) }}</td>
        <td>{{ form_errors(form.Password.second) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.Email.first) }}</td>
        <td>{{ form_widget(form.Email.first) }}</td>
        <td>{{ form_errors(form.Email.first) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.Email.second) }}</td>
        <td>{{ form_widget(form.Email.second) }}</td>
        <td>{{ form_errors(form.Email.second) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.Role) }}</td>
        <td>{{ form_widget(form.Role) }}</td>
        <td>{{ form_errors(form.Role) }}</td>
    </tr>
    <tr>
        <td>{{ form_widget(form._token) }}</td>
        <td>{{ form_widget(form.submit) }}</td>

    </tr>

{{ form_end(form) }}
</table>
{% endblock %}